{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "references": [{ "path": "./tsconfig.node.json" }],
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
